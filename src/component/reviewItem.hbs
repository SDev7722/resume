{{#each reviewList}}
    <div class="my-5">
        <div class="card p-4">
            <div class="col-12">
                <div class="card pb-3">
                    <ul class='list-group list-group-flush'>
                        <li class='list-group-item'>
                            {{#with title}}
                                <div class="mt-2 mb-2"><b>{{userName}}</b></div>
                                <div class="mt-2 mb-3">{{caption}}</div>
                                <div class="mb-2">{{date}}</div>
                            {{/with}}
                        </li>
                        {{#with reviewBody}}
                            <li class='list-group-item'>
                                {{#with seller}}
                                    <div class="mt-2 mb-4">{{title}}: {{value}}</div>
                                {{/with}}
                                {{#with rating}}
                                    <div class="mb-4">{{title}}: {{value}}</div>
                                {{/with}}
                                {{#each text}}
                                    <div class="mb-4"><blockquote>{{this}}</blockquote></div>
                                {{/each}}
                                {{#with advantages}}
                                    <div class="mb-1"><strong>{{title}}:</strong></div>
                                    <div class="mb-4">{{text}}</div>
                                {{/with}}
                                {{#with disadvantages}}
                                    <div class="mb-1"><strong>{{title}}:</strong></div>
                                    <div class="mb-5">{{text}}</div>
                                {{/with}}
                                <div class="row">
                                    {{#each images}}
                                        <div class="col-3">
                                            <img style='border-radius: 8px' src='{{this}}' alt='Product photo'/>
                                        </div>
                                    {{/each}}
                                </div>
                            </li>
                        {{/with}}
                    </ul>
                </div>  
            </div>
            <div class="ms-5 mt-5 mb-2">
                {{#with reviewBody}}
                    {{#each coments}}
                        <div class="mt-3 mb-2">
                            <div class="card p-3">
                                <div class="mt-2 mb-2"><b>{{userName}}</b></div>
                                <div class="mt-2 mb-3">{{date}}</div>
                                <div class="mb-2">{{text}}</div>
                            </div>
                        </div>
                    {{/each}}
                {{/with}}
            </div>
        </div>
    </div>
{{/each}}