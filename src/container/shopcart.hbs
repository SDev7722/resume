<main>
    <div class="row gy-4">
         <header class="col-12 mb-5">
             <div class="card">
                <div class="nav p-3">
                    {{#with navigation}}
                        {{#each links}}
                            <div class="nav-item">
                                <a href='{{href}}' class='nav-link {{#if @last}}disabled{{/if}}'>{{text}}</a>
                            </div>
                        {{/each}}
                    {{/with}}
                </div>
            </div>
        </header>

        {{#with header}}
            <h1>{{title}}</h1>

            {{#with button}}
                <div class="mt-3 mb-4">
                    <a href='{{link}}' class='btn btn-outline-secondary'>{{text}}</a>
                </div>
            {{/with}}
        {{/with}}

        <hr class="my-5">

        {{>cartGoodsItem}}

        <hr class="my-5">

        {{#with total}}
            <div class="display-6">{{title}}</div>
            <div class="display-6"><strong>{{amount}}</strong></div>
            <p>{{delivery}}</p>

            {{#each buttons}}
                {{#if isSuccess includeZero=true}}
                    <div class="mt-3 mb-2">
                        <a href='{{link}}' class='btn btn-success'>{{text}}</a>
                    </div>
                {{/if}}
                {{#if isOutline includeZero=true}}
                    <div>
                        <a href='{{link}}' class='btn btn-outline-success'>{{text}}</a>
                    </div>
                {{/if}}
            {{/each}}
        {{/with}}

        <hr class="my-5">

        {{#with goodsOtherBlock}}
            <div class="display-6 text-center"><b>{{title}}</b></div>

                <section class="col-12">
                    <div class="row px-3 pt-4">
                        {{#each cards}}
                            <div class="col-4">
                                <div class="card h-100 text-bg-light">
                                    <img class="card-img-top" src="{{image}}" alt="Product photo">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            {{title}}
                                            {{#if isHot includeZero=true}}
                                                <span class='badge text-bg-warning rounded-pill ms-2'>HOT!</span>
                                            {{/if}}
                                            {{#if isNew includeZero=true}}
                                                <span class='badge text-bg-primary rounded-pill ms-2'>Нове</span>
                                            {{/if}}
                                        </h5>
                                        <p>
                                            <blockquote>{{description}}</blockquote>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </section>
        {{/with}}

        <hr class="my-5">

        {{#with subscribe}}
            <section class="col-12 mb-4">
                <div class="row g-2">
                    <div class="card h-100 text-bg-secondary">
                        <div class="card-body">
                            <h2 class="card-title">{{header}}</h2>
                            <p>
                                <blockquote>{{description}}</blockquote>
                            </p>
                            
                            <div class='pb-2'>
                                <div class='nav flex-column'>
                                    {{#each buttons}}
                                        <div class='nav-item my-2'>
                                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {{/with}}

        <hr class="my-5">

         <footer class="nav">
            {{#each footer}}
                <ul class="nav-item col-2">
                    {{#each this}}
                        <div class="mb-1">
                            <li class='nav-link'>
                                <a href='{{link}}' class='nav-link {{#if @last}}disabled{{/if}}'>{{text}}</a>
                            </li>
                        </div>
                    {{/each}}
                </ul>
            {{/each}}
        </footer>
    </div>
</main>